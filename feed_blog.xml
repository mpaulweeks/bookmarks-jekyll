<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>M. Paul Weeks - Blog</title>
    <description>Thoughts on Things</description>
    <link>{{ site.url }}</link>
    {% assign posts = site.posts | sort: 'date' | reverse %}
    {% assign posts = posts | where: "type", "post" %}
    {% assign posts = posts | where: "isLive", "true" %}
    {% for post in posts %}
      <item>
        <title>{{ post.title | xml_escape }}</title>
        <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
        <link>{{ site.baseurl }}{{ post.permalink }}</link>
        <guid isPermaLink="true">{{ site.baseurl }}{{ post.permalink }}</guid>
      </item>
    {% endfor %}
  </channel>
</rss>
